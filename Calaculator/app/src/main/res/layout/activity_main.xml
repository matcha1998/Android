<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/root_view"
    android:orientation="vertical"
    android:padding="5dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="100dp"
        android:paddingRight="10dp"
        android:id="@+id/result"/>
    <TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <TableRow>
            <Button
                android:layout_width="wrap_content"
                android:text="1"
                android:id="@+id/btn1"
                android:textSize="60dp"/>
            <Button
                android:layout_width="wrap_content"
                android:text="2"
                android:id="@+id/btn2"
                android:textSize="60dp"/>
            <Button
                android:layout_width="wrap_content"
                android:text="3"
                android:id="@+id/btn3"
                android:textSize="60dp"/>
            <Button
                android:layout_width="wrap_content"
                android:text="+"
                android:id="@+id/btnAdd"
                android:textSize="60dp"/>

        </TableRow>
        <TableRow>
            <Button
                android:layout_width="wrap_content"
                android:text="4"
                android:id="@+id/btn4"
                android:textSize="60dp"/>
            <Button
                android:layout_width="wrap_content"
                android:text="5"
                android:id="@+id/btn5"
                android:textSize="60dp"/>
            <Button
                android:layout_width="wrap_content"
                android:text="6"
                android:id="@+id/btn6"
                android:textSize="60dp"/>
            <Button
                android:layout_width="wrap_content"
                android:text="-"
                android:id="@+id/btnSub"
                android:textSize="60dp"/>
        </TableRow>
        <TableRow>
            <Button
                android:layout_width="wrap_content"
                android:text="7"
                android:id="@+id/btn7"
                android:textSize="60dp"/>
            <Button
                android:layout_width="wrap_content"
                android:text="8"
                android:id="@+id/btn8"
                android:textSize="60dp"/>
            <Button
                android:layout_width="wrap_content"
                android:text="9"
                android:id="@+id/btn9"
                android:textSize="60dp"/>
            <Button
                android:layout_width="wrap_content"
                android:text="*"
                android:id="@+id/btnMul"
                android:textSize="60dp"/>
        </TableRow>
        <TableRow>
            <Button
                android:layout_width="wrap_content"
                android:text="/"
                android:id="@+id/btnDiv"
                android:textSize="60dp"/>
            <Button
                android:layout_width="wrap_content"
                android:text="0"
                android:id="@+id/btn0"
                android:textSize="60dp"/>
            <Button
                android:layout_width="wrap_content"
                android:text="CLR"
                android:id="@+id/btnClr"
                android:textSize="60dp"/>
            <Button
                android:layout_width="wrap_content"
                android:text="="
                android:id="@+id/btnEquals"
                android:textSize="60dp"/>
        </TableRow>
    </TableLayout>

</LinearLayout>