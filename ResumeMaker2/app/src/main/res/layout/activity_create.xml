<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#1a001a"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="CONTACT DETAILS: "
            android:textColor="#ff66b3"
            android:textStyle="bold|italic"
            android:textSize="25dp"
            android:padding="8dp"
            android:layout_gravity="center"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:hint="Name *"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            android:layout_margin="6dp"
            android:padding="10dp"
            android:background="#8080ff"
            android:textSize="20dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            android:hint="Date of Birth (D.O.B) *"
            android:background="#8080ff"
            android:layout_margin="6dp"
            android:padding="10dp"
            android:textSize="20dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/emailID"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            android:hint="Email id *"
            android:background="#8080ff"
            android:layout_margin="6dp"
            android:padding="10dp"
            android:textSize="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phone"
            android:hint="Contact Number *"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            android:background="#8080ff"
            android:layout_margin="6dp"
            android:padding="10dp"
            android:textSize="20dp"
            android:inputType="phone"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/res_Add"
            android:background="#8080ff"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            android:hint="Full Residential Address Details *"
            android:layout_margin="6dp"
            android:padding="10dp"
            android:textSize="20dp"
            android:inputType="textPostalAddress"
            android:layout_weight="0.30" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="8dp"
            android:text="ACADEMIC DETAILS:"
            android:textColor="#ff66b3"
            android:textStyle="bold|italic"
            android:textSize="25dp"
            android:layout_gravity="center"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/board_tenth"
            android:hint="Class 10 Board"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            android:layout_margin="6dp"
            android:padding="10dp"
            android:background="#8080ff"
            android:textSize="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/marks_tenth"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            android:hint="10th Board Marks (in % or in CGPA) *"
            android:layout_margin="6dp"
            android:background="#8080ff"
            android:padding="10dp"
            android:textSize="20dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/board_12"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            android:hint="Class 12 Board"
            android:background="#8080ff"
            android:layout_margin="6dp"
            android:padding="10dp"
            android:textSize="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/marks_12"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            android:hint="12th Board Marks (in % or in CGPA) *"
            android:layout_margin="6dp"
            android:background="#8080ff"
            android:padding="10dp"
            android:textSize="20dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/college"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            android:hint="College Name *"
            android:layout_margin="6dp"
            android:background="#8080ff"
            android:padding="10dp"
            android:textSize="20dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/course"
            android:hint="Course Name *"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            android:layout_margin="6dp"
            android:padding="10dp"
            android:background="#8080ff"
            android:textSize="20dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/year"
            android:hint="Year of Passing"
            android:background="#8080ff"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            android:layout_margin="6dp"
            android:padding="10dp"
            android:textSize="20dp"/>

        <EditText
            android:background="#8080ff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cgpa"
            android:hint="CGPA *"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            android:layout_margin="6dp"
            android:padding="10dp"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Experience Details:"
            android:textColor="#ff66b3"
            android:textStyle="bold|italic"
            android:textSize="25dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:padding="8dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/work"
            android:hint="Work Experience"
            android:inputType="textMultiLine"
            android:layout_margin="6dp"
            android:padding="10dp"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            android:background="#8080ff"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Extra Curriculum:"
            android:textColor="#ff66b3"
            android:textStyle="bold|italic"
            android:textSize="25dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:padding="8dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Scholastic Achievements *"
            android:textStyle="bold|italic"
            android:textColor="#000000"
            android:layout_margin="6dp"
            android:padding="10dp"
            android:background="#8080ff"
            android:textSize="20dp"
            android:id="@+id/sca"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Position of Responsibility *"
            android:textStyle="bold|italic"
            android:textColor="#000000"
            android:layout_margin="6dp"
            android:padding="10dp"
            android:background="#8080ff"
            android:textSize="20dp"
            android:id="@+id/por"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Strengths and Weaknesses *"
            android:textStyle="bold|italic"
            android:textColor="#000000"
            android:layout_margin="6dp"
            android:padding="10dp"
            android:background="#8080ff"
            android:textSize="20dp"
            android:id="@+id/sandw"/>
        <Button
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#ff9933"
            android:text="SAVE"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:id="@+id/saveBtn"/>
    </LinearLayout>
</ScrollView>
